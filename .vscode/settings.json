        "*.c": "c",
        "any": "c",
        "array": "c",
        "charconv": "c",
        "compare": "c",
        "functional": "c",
        "ratio": "c",
        "tuple": "c",
        "type_traits": "c",
        "utility": "c",
        "variant": "c",
        "cstdint": "c",
        "format": "c",
        "cstdlib": "c",
        "*.inc": "c",
        "cassert": "c"
    }
}